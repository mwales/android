<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="always_autofocus"
        android:title="@string/pref_title_always_autofocus"
        android:summary="@string/pref_description_always_autofocus"
        android:defaultValue="false" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="server_address"
        android:title="@string/server_address_display_name"
        android:defaultValue="@string/server_address_default_address"
        android:selectAllOnFocus="true"
        android:inputType="textUri"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="server_port_number"
        android:title="@string/server_port_display_name"
        android:defaultValue="@string/server_port_default_value"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="shutter_port_number"
        android:title="@string/shutter_port_display_name"
        android:defaultValue="@string/shutter_port_default_value"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:singleLine="true"
        android:maxLines="1" />



</PreferenceScreen>
